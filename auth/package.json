{
  "name": "clout-auth",
  "version": "1.0.0",
  "description": "Authentication microservice for Clout Social media app",
  "main": "index.ts",
  "scripts": {
    "lint": "eslint src",
    "prettier": "prettier src/**/*.ts",
    "prettier:fix": "prettier src/**/*.ts --write",
    "start:dev": "nodemon -r tsconfig-paths/register src/index.ts",
    "start": "echo starting prod server",
    "test": "jest",
    "test:watch": "jest --watchAll --no-cache",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./build"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "./src/test-utils/setup-after-env.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "keywords": [
    "clout",
    "auth"
  ],
  "author": "Neha Lanjewar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ney-l/clout/issues"
  },
  "homepage": "https://github.com/ney-l/clout#readme",
  "dependencies": {
    "body-parser": "^1.19.2",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.14.0",
    "mongodb-memory-server": "^8.4.0",
    "mongoose": "^6.2.4"
  },
  "devDependencies": {
    "@types/dotenv-safe": "^8.1.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^17.0.21",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.6.0",
    "tsconfig-paths": "^3.13.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier:fix",
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  }
}
